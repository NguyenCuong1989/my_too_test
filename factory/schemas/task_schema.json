{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ACETask",
  "type": "object",
  "properties": {
    "skill_name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]+$"
    },
    "task_id": {
      "type": "string"
    },
    "parameters": {
      "type": "object"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "timeout": { "type": "integer", "default": 60 }
      }
    }
  },
  "required": ["skill_name", "task_id", "parameters"]
}
